<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant80"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/light_t1_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Цена освещения Т1 (7.85)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/light_t2_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Цена освещения Т2 (2.98)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/light_t3_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Цена освещения Т3 (6.43)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/hot_water_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Цена горячей воды (205.15)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/cold_water_price_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Цена холодной воды (42.3)"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/save_changes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dark_green"
        android:text="Сохранить изменения" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="Выход" />

    <Button
        android:id="@+id/button_test_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тестовый ввод" />

</LinearLayout>
